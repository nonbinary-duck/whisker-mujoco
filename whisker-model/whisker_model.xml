    <!-- Car Stuff -->
  
    <tendon>
        <fixed name="forward">
            <joint joint="left" coef=".5" />
            <joint joint="right" coef=".5" />
        </fixed>
        <fixed name="turn">
            <joint joint="left" coef="-.5" />
            <joint joint="right" coef=".5" />
        </fixed>
    </tendon>

    <actuator>
        <motor name="forward" tendon="forward" ctrlrange="-.50 1.25" />
        <motor name="turn" tendon="turn" ctrlrange="-0.50 0.50" />
